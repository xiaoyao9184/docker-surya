{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker: compose up.label@gpu-offline",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docker/up.label@gpu-offline/"
            },
            "command": "docker compose -p surya up"
        },
        {
            "label": "docker: compose up.gradio@gpu-offline",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docker/up.gradio@gpu-offline/"
            },
            "command": "docker compose -p surya up"
        },
        {
            "label": "docker: compose up@cpu-online",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docker/up@cpu-online/"
            },
            "command": "docker compose -p surya up",
        },
        {
            "label": "docker: build master",
            "type": "shell",
            "command": "docker build -t xiaoyao9184/surya:master -f ./docker/build@source/dockerfile .",
        },
        {
            "label": "docker: build 0.10.1",
            "type": "shell",
            "command": "docker build -t xiaoyao9184/surya:0.10.1 -f ./docker/build@pypi/dockerfile .",
        },
        {
            "label": "huggingface-cli: download models",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    // "HF_ENDPOINT": "https://hf-mirror.com",
                    // "HF_HUB_ETAG_TIMEOUT": "1000",
                    // "HF_HUB_DOWNLOAD_TIMEOUT": "1000"
                }
            },
            "command": [
                "huggingface-cli download vikp/surya_det3 --revision 467ee9ec33e6e6c5f73e57dbc1415b14032f5b95 --cache-dir ./cache/huggingface/hub",
                "&& huggingface-cli download vikp/surya_rec2 --revision 6611509b2c3a32c141703ce19adc899d9d0abf41 --cache-dir ./cache/huggingface/hub",
                "&& huggingface-cli download datalab-to/surya_tablerec --revision 7327dac38c300b2f6cd0501ebc2347dd3ef7fcf2 --cache-dir ./cache/huggingface/hub",
                "&& huggingface-cli download datalab-to/surya_layout --revision 7ac8e390226ee5fa2125dd303d827f79d31d1a1f --cache-dir ./cache/huggingface/hub",
                "&& huggingface-cli download datalab-to/ocr_error_detection --revision c1cbda3757670fd520553eaa5197656d331de414 --cache-dir ./cache/huggingface/hub",
                "&& huggingface-cli download datalab-to/texify --revision 8f1d761762b3e977e9e62cebfca487d489556abc --cache-dir ./cache/huggingface/hub",
            ]
        },
        {
            "label": "conda: pytest label-studio-ml",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/",
                "env": {
                    // "LABEL_STUDIO_URL": "http://localhost:8080",
                    // "LABEL_STUDIO_API_KEY": "<your-label-studio-api-key>",
                    // "HF_ENDPOINT": "https://hf-mirror.com",
                    // "HF_HUB_ETAG_TIMEOUT": "1000",
                    // "HF_HUB_DOWNLOAD_TIMEOUT": "1000",
                    "XDG_CACHE_HOME": "${workspaceFolder}/cache"
                }
            },
            "command": [
                "conda run -n surya pytest ${workspaceFolder}/label/test_api.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "conda: label-studio-ml start",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/",
                "env": {
                    // "LABEL_STUDIO_URL": "http://localhost:8080",
                    // "LABEL_STUDIO_API_KEY": "<your-label-studio-api-key>",
                    // "HF_ENDPOINT": "https://hf-mirror.com",
                    // "HF_HUB_ETAG_TIMEOUT": "1000",
                    // "HF_HUB_DOWNLOAD_TIMEOUT": "1000",
                    "XDG_CACHE_HOME": "${workspaceFolder}/cache"
                }
            },
            "command": [
                "conda run --no-capture-output -n surya label-studio-ml start --root-dir ${workspaceFolder} label"
            ],
            "problemMatcher": []
        },
        {
            "label": "conda: gradio gradio_app",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/",
                "env": {
                    // "HF_ENDPOINT": "https://hf-mirror.com",
                    // "HF_HUB_ETAG_TIMEOUT": "1000",
                    // "HF_HUB_DOWNLOAD_TIMEOUT": "1000",
                    "XDG_CACHE_HOME": "${workspaceFolder}/cache"
                }
            },
            "command": [
                "conda run --no-capture-output -n surya gradio gradio/gradio_app.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "conda: run surya_gui",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/surya",
                "env": {
                    // "HF_ENDPOINT": "https://hf-mirror.com",
                    // "HF_HUB_ETAG_TIMEOUT": "1000",
                    // "HF_HUB_DOWNLOAD_TIMEOUT": "1000",
                    "STREAMLIT_SERVER_PORT": "8501",
                    "XDG_CACHE_HOME": "${workspaceFolder}/cache",
                },
            },
            "command": [
                "conda run --no-capture-output -n surya poetry run surya_gui"
            ]
        },
        {
            "label": "conda: create env",
            "type": "shell",
            "command": [
                "git config --global url.'https://github.com/xiaoyao9184/label-studio-sdk'.insteadOf 'https://github.com/HumanSignal/label-studio-sdk'",
                "&& conda env create -f ./environment.yml",
                "&& git config --global --unset url.'https://github.com/xiaoyao9184/label-studio-sdk'.insteadOf"
            ]
        }
    ]
}